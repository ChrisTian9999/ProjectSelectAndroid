<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.chris.pss.activity.TeacherInfoActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape_divider"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="账号："
                    />

                <TextView
                    android:id="@+id/tv_info_sno"
                    style="@style/TvUserInfoValue"
                    tools:text="123"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="姓名："
                    />

                <TextView
                    android:id="@+id/tv_info_name"
                    style="@style/TvUserInfoValue"
                    tools:text="赵老师"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="性别："
                    />

                <TextView
                    android:id="@+id/tv_info_gender"
                    style="@style/TvUserInfoValue"
                    tools:text="123"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="学院："
                    />

                <TextView
                    android:id="@+id/tv_info_depart"
                    style="@style/TvUserInfoValue"
                    tools:text="信息工程学院"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="专业："
                    />

                <TextView
                    android:id="@+id/tv_info_major"
                    style="@style/TvUserInfoValue"
                    tools:text="计算机科学与技术"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="班级："
                    />

                <TextView
                    android:id="@+id/tv_info_classname"
                    style="@style/TvUserInfoValue"
                    tools:text="1302"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/TvUserInfoTitle"
                    android:text="手机号："
                    />

                <TextView
                    android:id="@+id/tv_info_tel"
                    style="@style/TvUserInfoValue"
                    tools:text="18100000001"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
